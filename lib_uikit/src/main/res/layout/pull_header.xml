<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/tvPullLayHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="下拉刷新"/>
    <TextView
        android:id="@+id/tvPullTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textSize="10sp"
        android:text="上次刷新时间："
        android:layout_below="@id/tvPullLayHeader"
        android:layout_alignLeft="@id/tvPullLayHeader"/>
    <ImageView
        android:id="@+id/imgPullJt"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/xlsx"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/tvPullLayHeader"/>
    <ImageView
        android:id="@+id/imgPullLoad"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/load"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:layout_toLeftOf="@id/tvPullLayHeader"/>
</RelativeLayout>
